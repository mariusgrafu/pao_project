<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane fx:id="articleItemContainer" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.blog.gui.controllers.ArticleListItemController">
   <children>
      <HBox prefHeight="62.0" prefWidth="622.0">
         <children>
            <VBox>
               <children>
                  <Text fx:id="articleTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="Article Title Goes Here">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Text>
                  <Text fx:id="articleAuthorDate" strokeType="OUTSIDE" strokeWidth="0.0" text="by Author, 06/03/2019">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="articleViewButton" mnemonicParsing="false" onAction="#viewArticle" text="View Article">
               <HBox.margin>
                  <Insets top="9.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
